@model Learn_web.Models.Order

@{
    ViewData["Title"] = "Детально";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Детально</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dateOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.clientData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.clientData)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.originalLanguage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.originalLanguage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.translateLanguage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.translateLanguage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.costOfWork)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.costOfWork)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.costOfTranslationServices)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.costOfTranslationServices)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Translator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Translator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.path)
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.path != null)
                {
                    <div>
                       <span style="margin-right:10px;">@Model.path</span><button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Download", "Home", new { path = Model.path})'">Скачать документ</button>
                    </div>
                }
            }
        </dd>
    </dl>
   

</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.id">Редактировать</a> |
    <a asp-action="Index">Назад на основную страницу</a>
</div>
