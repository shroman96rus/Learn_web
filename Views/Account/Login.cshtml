@model Learn_web.ViewModels.LoginModel

@{
    ViewData["Title"] = "Проверка пользователя";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet">
</head>

<body>
    <h1>
        Вход на сайт
    </h1>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="Login_form">
        <div class="form-group">
            <label for="exampleInputEmail1">Имя пользователя</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="User">
            <small id="emailHelp" class="form-text text-muted">Введите имя пользователя</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Пароль</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="Password">
            <small class="form-text text-muted">Введите пароль</small>
        </div>
        <button type="submit" class="btn btn-primary">Вход</button>
    </form>

</body>

