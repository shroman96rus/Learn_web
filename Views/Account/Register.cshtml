@model Learn_web.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="nameUser">Введите Login</label><br />
            <input type="text" asp-for="nameUser" />
        </div>
        <div>
            <label asp-for="userPassword">Введите пароль</label><br />
            <input asp-for="userPassword" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
        </div>
        <div>
            <label asp-for="role">Введите город</label><br />
            <input type="text" asp-for="role" />
        </div>
        
            <input type="submit" value="Регистрация" />
        </div>
    
</form>